@model IList<Post>
<h2>Lista de Posts</h2>
<div>
    @Html.ActionLink("Incluir Post", "Novo", null, null, new { @class = "btn btn-primary"})
    <!-- Tag helper <a asp-controller="Post" asp-action="Novo">Incluir Post</a> -->
    <table>
        <caption> Lista dos posts cadastrados no blog.</caption>
        <thead>
            <tr>
                <th>Post</th>
                <th>Categoria</th>
                <th>Publicado em</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>
                        <h4>@Html.ActionLink(p.Titulo,"Visualiza", new { id = p.Id })</h4>
                        <p>@p.Resumo</p>
                    </td>
                    <td>@p.Categoria</td>
                    <td>
                        @if(p.Publicado)
                        {
                            @Html.Raw(string.Format("{0:dd/MM/yyyy}", p.DataPublicacao))
                        } else
                        {
                            @Html.Raw("Não publicado")
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Remover","Remove", new { id = p.Id })
                        @Html.ActionLink("Publicar","Publica", new { id = p.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
